pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'your-dockerhub-username/java-ci-pipeline'
        NEXUS_URL = 'http://localhost:8081/repository/maven-releases/'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/your-username/java-ci-pipeline.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn clean verify sonar:sonar -Dsonar.login=<SONARQUBE_TOKEN>'

                }
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Publish to Nexus') {
            steps {
                sh """
                mvn deploy:deploy-file -DgroupId=com.example -DartifactId=java-ci-pipeline -Dversion=1.0.0 \
                    -Dpackaging=jar -Dfile=target/java-ci-pipeline-1.0.0.jar \
                    -DrepositoryId=nexus -Durl=$NEXUS_URL
                """
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE:latest .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push $DOCKER_IMAGE:latest'
                }
            }
        }
    }
}


// curl http://localhost:8080/api/hello
